<script>
    window.requestAnimationFrame = window.requestAnimationFrame || window.mozRequestAnimationFrame ||
                              window.webkitRequestAnimationFrame || window.msRequestAnimationFrame;
          var ID=1;
          var _time=500;
          var slider = new Nexus.Slider('#Slider1',{min:100, max:2000})

      var _Rb = new Nexus.RadioButton('#Rb1',{
  'numberOfButtons': 3,
  'active': -1})
      _Rb.on('change',function(v) {
               ID=v;
               document.getElementById("log").innerHTML='ID : '+v;
          })
          slider.on('change',function(v){
               _time=v;
               document.getElementById("log").innerHTML='Time : '+parseInt(v,10);

          })

          function progress(t){
               var progressTimeEnd=Date.now()+t;
               var progressPercent=0;
               var elem = document.getElementById("progress2");
                   var width = 1;
                   var id = requestAnimationFrame(frame);
                   function frame() {
                         progressPercent=parseInt(100-((progressTimeEnd-Date.now())/t)*100,10);
                       if (progressPercent >= 100) {
                         elem.innerHTML = 0  + '%';
                           elem.style.width = 0 + '%';
                       } else {
                          // width++;
                          requestAnimationFrame(frame);
                          elem.innerHTML = progressPercent  + '%';
                           elem.style.width = progressPercent + '%';
       }
    }
          }
          function vanity(n){
               pubnubEmit('msg',''+ID+' '+'recept '+n+' '+_time)
               progress(_time);
               

          }

</script>